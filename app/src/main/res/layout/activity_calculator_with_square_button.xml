<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/third_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.android.exercise.SquareButton
                android:id="@+id/bu_numb_7"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/black_border_and_withe_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="7" />

            <com.android.exercise.SquareButton
                android:id="@+id/bu_numb_8"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/bu_numb_7"
                android:background="@drawable/black_border_and_withe_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="8" />

            <com.android.exercise.SquareButton
                android:id="@+id/bu_numb_9"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/bu_numb_8"
                android:background="@drawable/black_border_and_withe_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="9" />

            <com.android.exercise.SquareButton
                android:id="@+id/bu_divide"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/bu_numb_9"
                android:background="@drawable/black_border_and_gray_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="%" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/third_line"
            android:padding="16dp">

            <com.android.exercise.SquareButton
                android:id="@+id/bu_numb_4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/black_border_and_withe_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="4" />

            <com.android.exercise.SquareButton
                android:id="@+id/bu_numb_5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/bu_numb_4"
                android:background="@drawable/black_border_and_withe_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="5" />

            <com.android.exercise.SquareButton
                android:id="@+id/bu_numb_6"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/bu_numb_5"
                android:background="@drawable/black_border_and_withe_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="6" />

            <com.android.exercise.SquareButton
                android:id="@+id/bu_for"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/bu_numb_6"
                android:background="@drawable/black_border_and_gray_background"
                android:gravity="center"
                android:textAllCaps="false"
                android:textSize="22sp"
                tools:text="x" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/first_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_line"
            android:padding="16dp">

            <com.android.exercise.SquareButton
                android:id="@+id/bu_numb_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/black_border_and_withe_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="1" />

            <com.android.exercise.SquareButton
                android:id="@+id/bu_numb_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/bu_numb_1"
                android:background="@drawable/black_border_and_withe_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="2" />

            <com.android.exercise.SquareButton
                android:id="@+id/bu_numb_3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/bu_numb_2"
                android:background="@drawable/black_border_and_withe_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="3" />

            <com.android.exercise.SquareButton
                android:id="@+id/bu_minus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/bu_numb_3"
                android:background="@drawable/black_border_and_gray_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="-" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/zero_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_line"
            android:padding="16dp">

            <com.android.exercise.SquareButton
                android:id="@+id/bu_numb_0"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/black_border_and_withe_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="0"
                android:elevation="24dp"/>

            <com.android.exercise.SquareButton
                android:id="@+id/bu_comma"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/bu_numb_0"
                android:background="@drawable/black_border_and_red_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text=","
                android:elevation="24dp"/>

            <com.android.exercise.SquareButton
                android:id="@+id/bu_equal"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/bu_comma"
                android:background="@drawable/black_border_and_yellow_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="=" />

            <com.android.exercise.SquareButton
                android:id="@+id/bu_equals"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/bu_equal"
                android:background="@drawable/black_border_and_gray_background"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="+" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>