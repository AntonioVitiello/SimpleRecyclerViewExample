<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.exercise.ResultFullCalculatorWithIntent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_sum_result"
            style="@style/BigTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3 + 2 = 5" />

        <TextView
            android:id="@+id/tv_subtraction_result"
            style="@style/BigTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_sum_result"
            app:layout_constraintRight_toRightOf="@+id/tv_sum_result"
            app:layout_constraintTop_toBottomOf="@+id/tv_sum_result"
            tools:text="4 - 2 = 2" />

        <TextView
            android:id="@+id/tv_product_result"
            style="@style/BigTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_subtraction_result"
            app:layout_constraintRight_toRightOf="@+id/tv_subtraction_result"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtraction_result"
            tools:text="7 * 3 = 21" />

        <TextView
            android:id="@+id/tv_factorial_result"
            style="@style/BigTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_product_result"
            app:layout_constraintRight_toRightOf="@+id/tv_product_result"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_result"
            tools:text="7 ! =5040 " />

        <TextView
            android:id="@+id/tv_power_result"
            style="@style/BigTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_factorial_result"
            app:layout_constraintRight_toRightOf="@+id/tv_factorial_result"
            app:layout_constraintTop_toBottomOf="@+id/tv_factorial_result"
            tools:text="2 ^ 3 = 8" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
